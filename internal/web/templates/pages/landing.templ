package pages

import (
	"github.com/abdul-hamid-achik/file-processor/internal/auth"
	"github.com/abdul-hamid-achik/file-processor/internal/web/templates/layouts"
	"github.com/abdul-hamid-achik/file-processor/internal/web/templates/components"
)

// Landing renders the landing page
templ Landing(user *auth.SessionUser) {
	@layouts.Base(layouts.PageMeta{
		Title:       "Home",
		Description: "Cheap file processing that doesn't compromise on quality. Resize, convert, and transform files at unbeatable prices.",
	}, user) {
		<!-- Hero Section -->
		<section class="relative overflow-hidden">
			<div class="absolute inset-0 bg-gradient-to-br from-nord-8/10 via-transparent to-nord-15/10"></div>
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24 lg:py-32 relative">
				<div class="text-center animate-fade-in">
					<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-nord-5 tracking-tight">
						File processing
						<span class="text-nord-8"> that doesn't cost a fortune</span>
					</h1>
					<p class="mt-6 text-lg sm:text-xl text-nord-4 max-w-2xl mx-auto">
						Resize images, generate thumbnails, and convert formats â€” 
						all at prices that won't break the bank.
					</p>
					<div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
						@components.ButtonLink("/register", components.ButtonProps{
							Variant: components.ButtonPrimary,
							Size:    components.ButtonLg,
						}) {
							Get started free
							<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
							</svg>
						}
						@components.ButtonLink("/docs", components.ButtonProps{
							Variant: components.ButtonSecondary,
							Size:    components.ButtonLg,
						}) {
							View documentation
						}
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="py-24 bg-nord-1">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-3xl font-bold text-nord-5">Premium processing, budget pricing</h2>
					<p class="mt-4 text-nord-4 max-w-2xl mx-auto">
						All the features you need, none of the enterprise price tag
					</p>
				</div>
				
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
					@components.FeatureCard(
						"Image Thumbnails",
						"Automatically generate optimized thumbnails for your images in various sizes.",
						thumbnailIcon(),
					)
					@components.FeatureCard(
						"Image Resizing",
						"Resize images to any dimension while maintaining aspect ratio and quality.",
						resizeIcon(),
					)
					@components.FeatureCard(
						"WebP Conversion",
						"Convert images to WebP format for smaller file sizes and faster loading.",
						convertIcon(),
					)
					@components.FeatureCard(
						"Watermarking",
						"Add text or image watermarks to protect your content.",
						watermarkIcon(),
					)
					@components.FeatureCard(
						"PDF Thumbnails",
						"Generate preview thumbnails from PDF documents.",
						pdfIcon(),
					)
					@components.FeatureCard(
						"Metadata Extraction",
						"Extract EXIF data, document properties, and more from your files.",
						metadataIcon(),
					)
				</div>
			</div>
		</section>

		<!-- Why file.cheap Section -->
		<section class="py-24">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-nord-5">Built for developers</h2>
					<p class="mt-4 text-nord-4 max-w-2xl mx-auto">
						Everything you need to process files, nothing you don't
					</p>
				</div>
				<div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
					<div class="text-center p-6 rounded-xl bg-nord-1/50">
						<div class="w-12 h-12 mx-auto mb-4 bg-nord-8/10 rounded-lg flex items-center justify-center">
							<svg class="w-6 h-6 text-nord-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
							</svg>
						</div>
						<div class="text-lg font-semibold text-nord-5">6 Processing Types</div>
						<div class="mt-2 text-nord-4 text-sm">Thumbnails, resize, WebP, watermark, PDF, metadata</div>
					</div>
					<div class="text-center p-6 rounded-xl bg-nord-1/50">
						<div class="w-12 h-12 mx-auto mb-4 bg-nord-14/10 rounded-lg flex items-center justify-center">
							<svg class="w-6 h-6 text-nord-14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
							</svg>
						</div>
						<div class="text-lg font-semibold text-nord-5">REST API + CLI</div>
						<div class="mt-2 text-nord-4 text-sm">Full API access and command-line tool included</div>
					</div>
					<div class="text-center p-6 rounded-xl bg-nord-1/50">
						<div class="w-12 h-12 mx-auto mb-4 bg-nord-13/10 rounded-lg flex items-center justify-center">
							<svg class="w-6 h-6 text-nord-13" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
							</svg>
						</div>
						<div class="text-lg font-semibold text-nord-5">Background Processing</div>
						<div class="mt-2 text-nord-4 text-sm">Async jobs with webhooks and status tracking</div>
					</div>
					<div class="text-center p-6 rounded-xl bg-nord-1/50">
						<div class="w-12 h-12 mx-auto mb-4 bg-nord-9/10 rounded-lg flex items-center justify-center">
							<svg class="w-6 h-6 text-nord-9" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
							</svg>
						</div>
						<div class="text-lg font-semibold text-nord-5">CDN-Ready URLs</div>
						<div class="mt-2 text-nord-4 text-sm">Shareable links with on-the-fly transforms</div>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-24 bg-nord-1">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
				<div class="bg-gradient-to-r from-nord-8 to-nord-9 rounded-2xl p-12 text-center">
					<h2 class="text-3xl font-bold text-nord-0">Start processing for less</h2>
					<p class="mt-4 text-nord-0/80 max-w-xl mx-auto">
						No credit card required. Get 100 free file operations to try it out.
					</p>
					<div class="mt-8">
						@components.ButtonLink("/register", components.ButtonProps{
							Variant: components.ButtonSecondary,
							Size:    components.ButtonLg,
							Class:   "bg-nord-0 text-nord-8 hover:bg-nord-1",
						}) {
							Create free account
						}
					</div>
				</div>
			</div>
		</section>
	}
}

templ thumbnailIcon() {
	<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
	</svg>
}

templ resizeIcon() {
	<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
	</svg>
}

templ convertIcon() {
	<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
	</svg>
}

